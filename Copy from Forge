#### 2.2. Frontend (React)

##### 2.2.1. Project Setup

npx create-react-app synvara-dashboard-frontend
cd synvara-dashboard-frontend
npm install axios react-router-dom chart.js react-chartjs-2
##### 2.2.2. Create Components

Create the following components:

DailyDashboard.js
WeeklyDashboard.js
MonthlyDashboard.js
Navigation.js
##### 2.2.3. DailyDashboard.js

// DailyDashboard.js
import React, { useState, useEffect } from 'react';
import axios from 'axios';
import { Bar } from 'react-chartjs-2';
import { Chart as ChartJS, CategoryScale, LinearScale, BarElement, Title, Tooltip, Legend } from 'chart.js';
ChartJS.register(
  CategoryScale,
  LinearScale,
  BarElement,
  Title,
  Tooltip,
  Legend
);

const DailyDashboard = () => {
  const [data, setData] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);

  useEffect(() => {
    const fetchData = async () => {
      try {
        const response = await axios.get('http://localhost:3001/api/daily');
        setData(response.data);
        setLoading(false);
      } catch (err) {
        setError(err);
        setLoading(false);
      }
    };

    fetchData();
  }, []);

  if (loading) {
    return <p>Loading daily data...</p>;
  }

  if (error) {
    return <p>Error: {error.message}</p>;
  }

  if (!data) {
    return <p>No daily data available.</p>;
  }

  const chartData = {
    labels: ['Revenue', 'Orders', 'Customer Acquisition Cost'],
    datasets: [
      {
        label: 'Daily Metrics',
        data: [data.revenue, data.orders, data.customerAcquisitionCost],
        backgroundColor: [
          'rgba(255, 99, 132, 0.2)',
          'rgba(54, 162, 235, 0.2)',
          'rgba(255, 206, 86, 0.2)',
        ],
        borderColor: [
          'rgba(255, 99, 132, 1)',
          'rgba(54, 162, 235, 1)',
          'rgba(255, 206, 86, 1)',
        ],
        borderWidth: 1,
      },
    ],
  };

  const chartOptions = {
    responsive: true,
    plugins: {
      title: {
        display: true,
        text: 'Daily Performance Metrics',
      },
    },
  };

  return (
    <div>
      <h2>Daily Dashboard</h2>
      <p>Date: {data.date}</p>
      <Bar data={chartData} options={chartOptions} />
    </div>
  );
};

export default DailyDashboard;

##### 2.2.4. WeeklyDashboard.js

// WeeklyDashboard.js
import React, { useState, useEffect } from 'react';
import axios from 'axios';
import { Bar } from 'react-chartjs-2';
import { Chart as ChartJS, CategoryScale, LinearScale, BarElement, Title, Tooltip, Legend } from 'chart.js';
ChartJS.register(
  CategoryScale,
  LinearScale,
  BarElement,
  Title,
  Tooltip,
  Legend
);

const WeeklyDashboard = () => {
  const [data, setData] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);

  useEffect(() => {
    const fetchData = async () => {
      try {
        const response = await axios.get('http://localhost:3001/api/weekly');
        setData(response.data);
        setLoading(false);
      } catch (err) {
        setError(err);
        setLoading(false);
      }
    };

    fetchData();
  }, []);

  if (loading) {
    return <p>Loading weekly data...</p>;
  }

  if (error) {
    return <p>Error: {error.message}</p>;
  }

  if (!data) {
    return <p>No weekly data available.</p>;
  }

  const chartData = {
    labels: ['Revenue', 'Orders', 'Customer Acquisition Cost'],
    datasets: [
      {
        label: 'Weekly Metrics',
        data: [data.revenue, data.orders, data.customerAcquisitionCost],
        backgroundColor: [
          'rgba(255, 99, 132, 0.2)',
          'rgba(54, 162, 235, 0.2)',
          'rgba(255, 206, 86, 0.2)',
        ],
        borderColor: [
          'rgba(255, 99, 132, 1)',
          'rgba(54, 162, 235, 1)',
          'rgba(255, 206, 86, 1)',
        ],
        borderWidth: 1,
      },
    ],
  };

  const chartOptions = {
    responsive: true,
    plugins: {
      title: {
        display: true,
        text: 'Weekly Performance Metrics',
      },
    },
  };

  return (
    <div>
      <h2>Weekly Dashboard</h2>
      <p>Start Date: {data.startDate}</p>
      <p>End Date: {data.endDate}</p>
      <Bar data={chartData} options={chartOptions} />
    </div>
  );
};

export default WeeklyDashboard;

##### 2.2.5. MonthlyDashboard.js

// MonthlyDashboard.js
import React, { useState, useEffect } from 'react';
import axios from 'axios';
import { Bar } from 'react-chartjs-2';
import { Chart as ChartJS, CategoryScale, LinearScale, BarElement, Title, Tooltip, Legend } from 'chart.js';
ChartJS.register(
  CategoryScale,
  LinearScale,
  BarElement,
  Title,
  Tooltip,
  Legend
);

const MonthlyDashboard = () => {
  const [data, setData] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);

  useEffect(() => {
    const fetchData = async () => {
      try {
        const response = await axios.get('http://localhost:3001/api/monthly');
        setData(response.data);
        setLoading(false);
      } catch (err) {
        setError(err);
        setLoading(false);
      }
    };

    fetchData();
  }, []);

  if (loading) {
    return <p>Loading monthly data...</p>;
  }

  if (error) {
    return <p>Error: {error.message}</p>;
  }

  if (!data) {
    return <p>No monthly data available.</p>;
  }

  const chartData = {
    labels: ['Revenue', 'Orders', 'Customer Acquisition Cost'],
    datasets: [
      {
        label: 'Monthly Metrics',
        data: [data.revenue, data.orders, data.customerAcquisitionCost],
        backgroundColor: [
          'rgba(255, 99, 132, 0.2)',
          'rgba(54, 162, 235, 0.2)',
          'rgba(255, 206, 86, 0.2)',
        ],
        borderColor: [
          'rgba(255, 99, 132, 1)',
          'rgba(54, 162, 235, 1)',
          'rgba(255, 206, 86, 1)',
        ],
        borderWidth: 1,
      },
    ],
  };

  const chartOptions = {
    responsive: true,
    plugins: {
      title: {
        display: true,
        text: 'Monthly Performance Metrics',
      },
    },
  };

  return (
    <div>
      <h2>Monthly Dashboard</h2>
      <p>Month: {data.month}</p>
      <p>Year: {data.year}</p>
      <Bar data={chartData} options={chartOptions} />
    </div>
  );
};

export default MonthlyDashboard;

##### 2.2.6. Navigation.js

// Navigation.js
import React from 'react';
import { Link } from 'react-router-dom';
const Navigation = () => {
  return (
    <nav>
      <ul>
        <li>
          <Link to="/">Daily</Link>
        </li>
        <li>
          <Link to="/weekly">Weekly</Link>
        </li>
        <li>
          <Link to="/monthly">Monthly</Link>
        </li>
      </ul>
    </nav>
  );
};

export default Navigation;

##### 2.2.7. App.js

// App.js
import React from 'react';
import { BrowserRouter as Router, Route, Routes } from 'react-router-dom';
import DailyDashboard from './DailyDashboard';
import WeeklyDashboard from './WeeklyDashboard';
import MonthlyDashboard from './MonthlyDashboard';
import Navigation from './Navigation';
function App() {
  return (
    <Router>
      <div>
        <Navigation />
        <Routes>
          <Route path="/" element={<DailyDashboard />} />
          <Route path="/weekly" element={<WeeklyDashboard />} />
          <Route path="/monthly" element={<MonthlyDashboard />} />
        </Routes>
      </div>
    </Router>
  );
}

export default App;

