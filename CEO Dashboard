    <script>
        // Update timestamp
        function updateTimestamp() {
            const now = new Date();
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            };
            document.getElementById('timestamp').textContent = now.toLocaleDateString('en-US', options);
        }

        // Initialize dashboard
        function initializeDashboard() {
            updateTimestamp();
            loadSavedData();
        }

        // Update dashboard with latest data
        function updateDashboard() {
            updateTimestamp();
            
            // Add refresh animation
            const button = document.querySelector('.refresh-button');
            button.textContent = '‚è≥ Refreshing...';
            button.style.transform = 'rotate(360deg)';
            
            setTimeout(() => {
                button.textContent = '‚úÖ Updated!';
                button.style.transform = 'rotate(0deg)';
                
                setTimeout(() => {
                    button.textContent = 'üîÑ Refresh Data';
                }, 1500);
            }, 1000);
            
            // Save current data
            saveData();
        }

        // Save editable field data to localStorage
        function saveData() {
            const editableFields = document.querySelectorAll('.editable-field');
            const data = {};
            
            editableFields.forEach(field => {
                if (field.id) {
                    data[field.id] = field.textContent;
                }
            });
            
            localStorage.setItem('synvaraDashboardData', JSON.stringify(data));
        }

        // Load saved data from localStorage
        function loadSavedData() {
            const savedData = localStorage.getItem('synvaraDashboardData');
            
            if (savedData) {
                const data = JSON.parse(savedData);
                
                Object.keys(data).forEach(fieldId => {
                    const field = document.getElementById(fieldId);
                    if (field) {
                        field.textContent = data[fieldId];
                    }
                });
            }
        }

        // Auto-save on field changes
        document.addEventListener('DOMContentLoaded', () => {
            initializeDashboard();
            
            const editableFields = document.querySelectorAll('.editable-field');
            editableFields.forEach(field => {
                field.addEventListener('blur', saveData);
            });
        });

        // Calculate metrics dynamically
        function calculateMetrics() {
            const payroll = parseFloat(document.getElementById('payroll').textContent.replace(/[$,]/g, ''));
            const cloudInfra = parseFloat(document.getElementById('cloudInfra').textContent.replace(/[$,]/g, ''));
            const operations = parseFloat(document.getElementById('operations').textContent.replace(/[$,]/g, ''));
            const marketing = parseFloat(document.getElementById('marketing').textContent.replace(/[$,]/g, ''));
            const legal = parseFloat(document.getElementById('legal').textContent.replace(/[$,]/g, ''));
            const other = parseFloat(document.getElementById('other').textContent.replace(/[$,]/g, ''));
            
            const totalBurn = payroll + cloudInfra + operations + marketing + legal + other;
            const cashOnHand = parseFloat(document.getElementById('cashOnHand').textContent.replace(/[$,M]/g, '')) * 1000000;
            const runway = (cashOnHand / totalBurn).toFixed(1);
            
            document.getElementById('burnRate').textContent = '$' + (totalBurn / 1000).toFixed(0) + 'K';
            document.getElementById('runway').textContent = runway;
        }

        // Add keyboard shortcut for refresh (Cmd/Ctrl + R)
        document.addEventListener('keydown', (e) => {
            if ((e.metaKey || e.ctrlKey) && e.key === 'r') {
                e.preventDefault();
                updateDashboard();
            }
        });
    </script>
</body>
</html>
